<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              xmlns:tools="http://schemas.android.com/tools"
              android:orientation="horizontal"
              android:padding="@dimen/standard_material_padding">

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/vegetarian_symbol"/>

    <TextView android:id="@+id/recipe_textview"
              android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              android:layout_weight="1"
              android:layout_marginLeft="@dimen/standard_material_padding"
              android:textSize="@dimen/standard_text_size"
              android:textStyle="bold"/>

    <TextView
        android:id="@+id/starred_ingredient_count"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="16dp"
        tools:text="5"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="/"/>

    <TextView
        android:id="@+id/ingredient_count"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginRight="16dp"
        tools:text="8"/>

    <ImageView android:id="@+id/arrow_expand_imageview"
               android:layout_width="wrap_content"
               android:layout_height="wrap_content"
               android:src="@drawable/selector_arrow_down"/>

</LinearLayout>